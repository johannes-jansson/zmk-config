#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define SYM 1
#define SYS 2

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// -------------------------------------------------------------                     -------------------------------------------------------------
// | SYSESC  |    Q    |    W    |    E    |    R    |    T    |                     |    Y    |    U    |    I    |    O    |    P    |    \    |
// |---------|---------|---------|---------|---------|---------|                     |---------|---------|---------|---------|---------|---------|
// |   ESC   |    A    |    S    |    D    |    F    |    G    |                     |    H    |    J    |    K    |    L    |    ;    |    '    |
// |---------|---------|---------|---------|---------|---------|                     |---------|---------|---------|---------|---------|---------|
// |         |    Z    |    X    |    C    |    V    |    B    |                     |    N    |    M    |    ,    |    .    |    /    |         |
// |---------|---------|---------|---------|---------|---------|---------- ----------|---------|---------|---------|---------|---------|---------|
// |         |         |         |  NONE   |   GUI   | SYMTAB  |  BSPCS  | |  SPACE  |   RET   |  R ALT  |  NONE   |         |         |         |
// ----------------------------------------------------------------------- -----------------------------------------------------------------------
            bindings = <
    &lt SYS ESC &kp Q      &kp W       &kp E     &kp R         &kp T             &kp Y     &kp U           &kp I     &kp O      &kp P      &kp BSLH
    &kp ESC     &kp A      &kp S       &kp D     &kp F         &kp G             &kp H     &kp J           &kp K     &kp L      &kp SEMI   &kp SQT
    &none       &kp Z      &kp X       &kp C     &kp V         &kp B             &kp N     &kp M           &kp COMMA &kp DOT    &kp FSLH   &none
    &none       &none      &none       &kp LGUI  &lt SYM TAB   &mt LSHIFT BSPC   &kp SPACE &mt LCTRL RET   &kp RALT  &none      &none      &none
            >;
        };

        sym_layer {
// 
// |-----------------------------------------|   |-----------------------------------------|
// |   `  |   !  |   @  |   {  |   }  |   &  |   |   *  |   7  |   8  |   9  |   +  |   =  |
// |------+------+------+------+------+-------   |------+------+------+------+------+------|
// |   ~  |   ^  |   $  |   (  |   )  |   '  |   |   ;  |   4  |   5  |   6  |   -  |   _  |
// |------+------+------+------+------+------|   |------+------+------+------+------+------|
// |      |   #  |   %  |   [  |   ]  |   "  |   |   :  |   1  |   2  |   3  |   \  |      | but windows
// |------+------+------+------+------+------|   |------+------+------+------+------+------|
// |      |      |      |      |      |      |   |      |      |   0  |      |      |      |
// |-----------------------------------------|   |-----------------------------------------|
//  pipe missing 

            bindings = <
    &kp GRAV &kp Q      &kp W       &kp E     &kp R         &kp T             &kp Y     &kp U           &kp I     &kp O      &kp P      &kp BSLH
    &kp TILD &kp A      &kp S       &kp D     &kp F         &kp G             &kp H     &kp J           &kp K     &kp L      &kp SEMI   &kp SQT
    &trans   &kp Z      &kp X       &kp C     &kp V         &kp B             &kp N     &kp M           &kp COMMA &kp DOT    &kp FSLH   &trans
    &trans   &trans     &trans      &trans    &trans        &trans            &trans    &trans          &kp N0    &trans     &trans     &trans
            >;
        };

        sys_layer {
            bindings = <
    &trans &kp C_VOL_DN &kp C_MUTE   &kp C_VOL_UP &bootloader   &trans            &trans   &trans   &trans &trans    &trans &trans
    &trans &kp C_PREV   &kp C_PP     &kp C_NEXT   &kp PSCRN     &trans            &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
    &trans &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2  &trans            &trans   &trans   &trans &trans    &trans &trans
    &trans &trans       &trans       &trans       &trans        &trans            &trans   &trans   &trans &trans    &trans &trans
            >;
        };
    };
};
